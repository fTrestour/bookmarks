{
  "name": "bookmarks",
  "version": "1.0.0",
  "description": "A simple bookmark manager",
  "scripts": {
    "test": "bun test",
    "dev": "node --watch src/app.ts",
    "start": "node src/app.ts",
    "check-types": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fTrestour/bookmarks.git"
  },
  "author": "fTrestour",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "fastify": "^5.4.0",
    "zod": "^4.0.8"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  }
}
